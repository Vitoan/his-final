extends ../layouts/main

block content
  div(class="max-w-md mx-auto bg-white p-8 rounded-xl shadow-md border border-slate-200 mt-10")
    h2(class="text-2xl font-bold text-slate-800 mb-6 text-center") Registrar Nuevo Personal

    if error
      div(class="bg-red-50 text-red-600 p-3 rounded mb-4 text-sm") #{error}

    form(action="/admin/usuarios/guardar" method="POST" class="space-y-4")
      
      div
        label(class="block text-sm font-medium text-slate-700") Nombre Completo
        input(type="text" name="nombre" required value=(data ? data.nombre : '') class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-teal-500 focus:ring-teal-500 border p-2")

      div
        label(class="block text-sm font-medium text-slate-700") Correo Electrónico
        input(type="email" name="email" required value=(data ? data.email : '') class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-teal-500 focus:ring-teal-500 border p-2")

      div
        label(class="block text-sm font-medium text-slate-700") Contraseña
        input(type="password" name="password" required class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-teal-500 focus:ring-teal-500 border p-2")

      div
        label(class="block text-sm font-medium text-slate-700") Rol / Cargo
        select(name="rol" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-teal-500 focus:ring-teal-500 border p-2")
          option(value="Medico") Médico
          option(value="Enfermeria") Enfermería
          option(value="Admision") Personal de Admisión
          option(value="Admin") Administrador

      div(class="pt-4 flex justify-between")
        a(href="/admin/usuarios" class="text-slate-500 hover:text-slate-800 py-2") Cancelar
        button(type="submit" class="bg-teal-600 text-white px-4 py-2 rounded-lg hover:bg-teal-700 font-bold shadow") Crear Usuario