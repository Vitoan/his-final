extends ../layouts/main

block content
  div(class="flex justify-between items-center mb-6")
    h1(class="text-3xl font-bold text-slate-800") Mapa de Camas
    
    // 1. LEYENDA DE COLORES
    div(class="text-sm text-slate-500")
      span(class="inline-block w-3 h-3 bg-green-500 rounded-full mr-1")
      span(class="mr-3") Disponible
      
      span(class="inline-block w-3 h-3 bg-red-500 rounded-full mr-1")
      span(class="mr-3") Ocupada
      
      span(class="inline-block w-3 h-3 bg-yellow-500 rounded-full mr-1")
      span Limpieza

  if error
    div(class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded shadow" role="alert")
      p= error

  // Iteramos sobre las habitaciones
  each habitacion in habitaciones
    div(class="bg-white shadow-sm rounded-2xl p-6 mb-6 border border-slate-100")
      h2(class="text-xl font-bold text-slate-700 mb-4 border-b border-slate-100 pb-2")
        | Habitaci√≥n #{habitacion.numero} 
        span(class="text-sm font-normal text-slate-500 ml-2") (#{habitacion.tipo})

      div(class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4")
        each cama in habitacion.camas
          
          // 2. TARJETA DE CAMA
          div(class=`border-2 rounded-xl p-4 flex flex-col justify-between transition-all ${cama.estado === 'Disponible' ? 'border-green-200 bg-green-50 hover:shadow-md' : cama.estado === 'Limpieza' ? 'border-yellow-200 bg-yellow-50' : 'border-red-200 bg-red-50'}`)
            
            div(class="text-center mb-2")
              h3(class="font-bold text-slate-700") Cama #{cama.numero}
            
            if cama.estado === 'Disponible'
              // --- ESTADO: DISPONIBLE ---
              div(class="text-center")
                span(class="text-3xl block mb-2") üõèÔ∏è
                span(class="inline-block px-2 py-1 text-xs font-semibold text-green-700 bg-green-200 rounded-full") Disponible
              
              div(class="mt-4")
                a(href=`/internacion/asignar/${cama.id}` class="block w-full text-center bg-white border border-green-500 text-green-600 hover:bg-green-500 hover:text-white font-bold py-1 px-2 rounded transition-colors text-sm")
                  | Asignar

            else if cama.estado === 'Limpieza'
              // --- ESTADO: LIMPIEZA ---
              div(class="text-center")
                span(class="text-3xl block mb-2") üßπ
                span(class="inline-block px-2 py-1 text-xs font-semibold text-yellow-800 bg-yellow-200 rounded-full") En Limpieza
              
              div(class="mt-4")
                a(href=`/habitaciones/limpiar/${cama.id}` class="block w-full text-center bg-white border border-yellow-500 text-yellow-600 hover:bg-yellow-500 hover:text-white font-bold py-1 px-2 rounded transition-colors text-sm")
                  | ‚úÖ Habilitar

            else if cama.estado === 'Ocupada'
              // --- ESTADO: OCUPADA ---
              div(class="text-center")
                span(class="text-3xl block mb-2") üõå
                span(class="inline-block px-2 py-1 text-xs font-semibold text-red-700 bg-red-200 rounded-full") Ocupada
              
              div(class="flex flex-col space-y-2 mt-4")
                // Botones Cl√≠nicos
                if cama.internacion_id
                  a(href="/enfermeria/evaluar/" + cama.internacion_id class="block w-full text-center text-xs bg-teal-50 border border-teal-500 text-teal-700 hover:bg-teal-500 hover:text-white px-2 py-1 rounded transition-colors font-bold")
                    | ü©∫ Enfermer√≠a
                  
                  a(href="/medico/evolucionar/" + cama.internacion_id class="block w-full text-center text-xs bg-slate-50 border border-slate-500 text-slate-700 hover:bg-slate-600 hover:text-white px-2 py-1 rounded transition-colors font-bold")
                    | üë®‚Äç‚öïÔ∏è M√©dico

                // Bot√≥n Alta
                form(action="/internacion/alta" method="POST" onsubmit="return confirm('¬øConfirmar el alta m√©dica?');" class="w-full")
                  input(type="hidden" name="cama_id" value=cama.id)
                  button(type="submit" class="w-full text-xs bg-white border border-red-500 text-red-600 hover:bg-red-500 hover:text-white px-2 py-1 rounded transition-colors uppercase font-bold")
                    | Dar Alta