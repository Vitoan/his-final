doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title} | Sistema HIS
    // Tailwind CSS vía CDN
    script(src="https://cdn.tailwindcss.com")
    // Fuente Google Fonts (Inter)
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap", rel="stylesheet")
    style.
      body { font-family: 'Inter', sans-serif; }
  body(class="bg-gray-50 text-gray-800")
    // Navbar Moderno
    nav(class="bg-white shadow-sm")
      div(class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8")
        div(class="flex justify-between h-16")
          div(class="flex")
            div(class="flex-shrink-0 flex items-center")
              // Logotipo
              a(href="/" class="text-2xl font-bold text-blue-600") HIS Hospital
            div(class="hidden sm:ml-6 sm:flex sm:space-x-8")
              // Enlaces de navegación con class="..." para soportar hover:
              a(href="/admision" class="border-transparent text-gray-500 hover:border-blue-500 hover:text-gray-900 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium") 
                | Admisión
              a(href="/medicos" class="border-transparent text-gray-500 hover:border-blue-500 hover:text-gray-900 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium") 
                | Médicos

    // Contenedor principal
    main(class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8")
      block content

    // Footer simple
    footer(class="bg-white border-t border-gray-200 mt-12")
      div(class="max-w-7xl mx-auto py-6 px-4 overflow-hidden sm:px-6 lg:px-8")
        p(class="mt-8 text-center text-base text-gray-400")
