extends ../layouts/main

block content
  // --- HEADER DE NAVEGACI√ìN ---
  div(class="max-w-5xl mx-auto mb-8")
    div(class="flex flex-col md:flex-row md:items-end justify-between gap-6")
      div
        h2(class="text-xs font-bold text-blue-500 dark:text-blue-400 mb-1 tracking-widest uppercase") √Årea M√©dica
        h1(class="text-3xl md:text-4xl font-bold tracking-tight text-slate-900 dark:text-white")
          | Evoluci√≥n del <span class="text-blue-600 dark:text-blue-500">Paciente</span>
      
      a(href="/clinica/dashboard" class="flex items-center gap-2 text-slate-500 hover:text-blue-600 dark:text-slate-400 dark:hover:text-white font-bold text-sm transition-colors")
        span &larr;
        | Volver al Tablero

  // --- TARJETA DEL PACIENTE (INFO) ---
  div(class="max-w-5xl mx-auto bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-[2rem] shadow-sm overflow-hidden mb-8 p-8")
    div(class="flex flex-col md:flex-row gap-6 items-start")
      
      // Avatar
      div(class="w-16 h-16 rounded-2xl bg-blue-100 text-blue-600 dark:bg-blue-900/30 dark:text-blue-300 flex items-center justify-center text-2xl font-bold shadow-sm")
         | #{paciente.nombre.charAt(0)}#{paciente.apellido.charAt(0)}
      
      // Datos
      div(class="flex-1")
        h2(class="text-2xl font-bold text-slate-900 dark:text-white leading-tight") #{paciente.nombre} #{paciente.apellido}
        div(class="flex flex-wrap gap-3 mt-2")
          span(class="px-3 py-1 rounded-lg bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300 text-xs font-bold font-mono") DNI: #{paciente.dni}
          span(class="px-3 py-1 rounded-lg bg-blue-50 text-blue-700 border border-blue-100 dark:bg-blue-900/30 dark:text-blue-300 dark:border-blue-800 text-xs font-bold")
             | üè• Hab: #{paciente.hab_numero} - Cama: #{paciente.numero_cama}

  // --- FORMULARIO Y CONTENIDO ---
  div(class="max-w-5xl mx-auto grid grid-cols-1 lg:grid-cols-3 gap-8")
    
    // COLUMNA IZQUIERDA: FORMULARIO DE CARGA
    div(class="lg:col-span-2")
      div(class="bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-[2rem] shadow-lg shadow-blue-500/5 p-8")
        
        div(class="flex items-center gap-3 mb-6 border-b border-slate-100 dark:border-slate-700 pb-4")
          div(class="w-10 h-10 rounded-xl bg-blue-600 text-white flex items-center justify-center text-xl shadow-md shadow-blue-500/30") üë®‚Äç‚öïÔ∏è
          h3(class="text-xl font-bold text-slate-800 dark:text-white") Nueva Evoluci√≥n
        
        form(action="/medico/guardar" method="POST" class="space-y-6")
          input(type="hidden" name="internacion_id" value=paciente.id)
          
          // Diagn√≥stico
          div
            label(class="block text-xs font-bold text-slate-500 dark:text-slate-400 uppercase tracking-wider mb-2") Diagn√≥stico / Evoluci√≥n Cl√≠nica
            textarea(name="diagnostico" rows="3" required placeholder="Describa el estado actual del paciente..." class="w-full px-4 py-3 bg-slate-50 dark:bg-slate-900 border border-slate-300 dark:border-slate-600 rounded-xl focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 focus:border-transparent outline-none transition-all dark:text-white resize-none shadow-inner")

          // Tratamiento
          div
            label(class="block text-xs font-bold text-slate-500 dark:text-slate-400 uppercase tracking-wider mb-2") Tratamiento / Indicaciones
            textarea(name="tratamiento" rows="3" required placeholder="Indique medicaci√≥n o procedimientos..." class="w-full px-4 py-3 bg-slate-50 dark:bg-slate-900 border border-slate-300 dark:border-slate-600 rounded-xl focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 focus:border-transparent outline-none transition-all dark:text-white resize-none shadow-inner")

          // Bot√≥n Guardar
          div(class="pt-2")
            button(type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3.5 rounded-xl shadow-lg shadow-blue-500/30 transition-all transform active:scale-95 flex items-center justify-center gap-2")
              span üíæ
              | Guardar Evoluci√≥n

    // COLUMNA DERECHA: HISTORIAL RECIENTE
    div(class="lg:col-span-1")
      div(class="bg-slate-50 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700 rounded-[2rem] p-6 h-full")
        h3(class="text-sm font-bold text-slate-500 dark:text-slate-400 uppercase tracking-wider mb-6 flex items-center gap-2")
           span üìú
           | Historial Reciente

        if historial.length > 0
          div(class="space-y-4 relative before:absolute before:inset-0 before:ml-2.5 before:w-0.5 before:bg-slate-200 dark:before:bg-slate-700")
            
            each evo in historial
              div(class="relative pl-8")
                // Puntito en l√≠nea de tiempo
                div(class="absolute top-1 left-0 w-5 h-5 rounded-full border-4 border-slate-50 dark:border-slate-800 bg-blue-500 z-10")
                
                div(class="bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-600 rounded-xl p-4 shadow-sm hover:shadow-md transition-shadow")
                  p(class="text-[10px] font-bold text-slate-400 uppercase mb-2") #{new Date(evo.createdAt).toLocaleDateString()} ‚Ä¢ #{new Date(evo.createdAt).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}
                  
                  // Intentamos leer del JSON (signos_vitales) o fallback a campos planos
                  - const diag = evo.signos_vitales ? evo.signos_vitales.diagnostico : evo.diagnostico
                  - const trat = evo.signos_vitales ? evo.signos_vitales.tratamiento : evo.tratamiento

                  if diag
                    div(class="mb-2")
                      span(class="text-xs font-bold text-blue-600 dark:text-blue-400 block") Diagn√≥stico
                      p(class="text-sm text-slate-700 dark:text-slate-300 leading-snug") #{diag}
                  
                  if trat
                    div
                      span(class="text-xs font-bold text-teal-600 dark:text-teal-400 block") Tratamiento
                      p(class="text-sm text-slate-700 dark:text-slate-300 leading-snug") #{trat}
        else
          div(class="text-center py-10 opacity-50")
            div(class="text-4xl mb-2") üìÇ
            p(class="text-sm") No hay historial previo.