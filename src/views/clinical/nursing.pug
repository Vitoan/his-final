extends ../layouts/main

block content
  // --- HEADER DE NAVEGACI√ìN ---
  div(class="max-w-6xl mx-auto mb-8")
    div(class="flex flex-col md:flex-row md:items-end justify-between gap-6")
      div
        h2(class="text-xs font-bold text-teal-500 dark:text-teal-400 mb-1 tracking-widest uppercase") M√≥dulo de Enfermer√≠a
        h1(class="text-3xl md:text-4xl font-bold tracking-tight text-slate-900 dark:text-white")
          | Control de <span class="text-teal-600 dark:text-teal-500">Signos Vitales</span>
      
      a(href="/clinica/dashboard" class="flex items-center gap-2 text-slate-500 hover:text-teal-600 dark:text-slate-400 dark:hover:text-white font-bold text-sm transition-colors")
        span &larr;
        | Volver al Tablero

  // --- TARJETA DEL PACIENTE ---
  div(class="max-w-6xl mx-auto bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-[2rem] shadow-sm overflow-hidden mb-8 p-8")
    div(class="flex flex-col md:flex-row gap-6 items-center md:items-start")
      
      // Avatar
      div(class="w-20 h-20 rounded-3xl bg-teal-100 text-teal-600 dark:bg-teal-900/30 dark:text-teal-300 flex items-center justify-center text-3xl font-bold shadow-sm")
         | #{paciente.nombre.charAt(0)}#{paciente.apellido.charAt(0)}
      
      // Datos
      div(class="flex-1 text-center md:text-left")
        h2(class="text-3xl font-bold text-slate-900 dark:text-white leading-tight") #{paciente.nombre} #{paciente.apellido}
        div(class="flex flex-wrap gap-3 mt-3 justify-center md:justify-start")
          span(class="px-3 py-1 rounded-lg bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300 text-xs font-bold font-mono") DNI: #{paciente.dni}
          span(class="px-3 py-1 rounded-lg bg-teal-50 text-teal-700 border border-teal-100 dark:bg-teal-900/30 dark:text-teal-300 dark:border-teal-800 text-xs font-bold")
             | üè• Hab: #{paciente.hab_numero} - Cama: #{paciente.numero_cama}

  // --- GRID PRINCIPAL ---
  div(class="max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-3 gap-8")
    
    // COLUMNA IZQUIERDA: FORMULARIO DE CARGA
    div(class="lg:col-span-2")
      div(class="bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-[2rem] shadow-lg shadow-teal-500/5 p-8")
        
        div(class="flex items-center gap-3 mb-8 border-b border-slate-100 dark:border-slate-700 pb-4")
          div(class="w-10 h-10 rounded-xl bg-teal-600 text-white flex items-center justify-center text-xl shadow-md shadow-teal-500/30") ü©∫
          h3(class="text-xl font-bold text-slate-800 dark:text-white") Nueva Evaluaci√≥n
        
        form(action="/enfermeria/guardar" method="POST" class="space-y-8")
          input(type="hidden" name="internacion_id" value=paciente.id)
          
          // GRID DE SIGNOS VITALES
          div(class="grid grid-cols-1 md:grid-cols-3 gap-6")
            
            // 1. Presi√≥n
            div(class="bg-slate-50 dark:bg-slate-900/50 p-4 rounded-2xl border border-slate-200 dark:border-slate-700 hover:border-teal-300 transition-colors group")
               label(class="block text-xs font-bold text-slate-400 uppercase tracking-wider mb-2 group-hover:text-teal-600 transition-colors") Presi√≥n (mmHg)
               div(class="relative")
                  span(class="absolute inset-y-0 left-0 flex items-center pl-3 text-xl") ü©∏
                  input(type="text" name="presion" placeholder="120/80" class="w-full pl-10 pr-3 py-2 bg-white dark:bg-slate-800 border border-slate-300 dark:border-slate-600 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-transparent outline-none font-mono font-bold text-lg text-slate-700 dark:text-white shadow-sm")

            // 2. Pulso
            div(class="bg-slate-50 dark:bg-slate-900/50 p-4 rounded-2xl border border-slate-200 dark:border-slate-700 hover:border-teal-300 transition-colors group")
               label(class="block text-xs font-bold text-slate-400 uppercase tracking-wider mb-2 group-hover:text-teal-600 transition-colors") Pulso (bpm)
               div(class="relative")
                  span(class="absolute inset-y-0 left-0 flex items-center pl-3 text-xl") ‚ù§Ô∏è
                  input(type="number" name="pulso" placeholder="80" class="w-full pl-10 pr-3 py-2 bg-white dark:bg-slate-800 border border-slate-300 dark:border-slate-600 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-transparent outline-none font-mono font-bold text-lg text-slate-700 dark:text-white shadow-sm")

            // 3. Temperatura
            div(class="bg-slate-50 dark:bg-slate-900/50 p-4 rounded-2xl border border-slate-200 dark:border-slate-700 hover:border-teal-300 transition-colors group")
               label(class="block text-xs font-bold text-slate-400 uppercase tracking-wider mb-2 group-hover:text-teal-600 transition-colors") Temp (¬∞C)
               div(class="relative")
                  span(class="absolute inset-y-0 left-0 flex items-center pl-3 text-xl") üå°Ô∏è
                  input(type="number" step="0.1" name="temperatura" placeholder="36.5" class="w-full pl-10 pr-3 py-2 bg-white dark:bg-slate-800 border border-slate-300 dark:border-slate-600 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-transparent outline-none font-mono font-bold text-lg text-slate-700 dark:text-white shadow-sm")

          // Notas de Enfermer√≠a
          div
            label(class="block text-xs font-bold text-slate-500 dark:text-slate-400 uppercase tracking-wider mb-2") Observaciones / Nota de Enfermer√≠a
            textarea(name="observaciones" rows="4" placeholder="Paciente se encuentra l√∫cido, afebril..." class="w-full px-4 py-3 bg-slate-50 dark:bg-slate-900 border border-slate-300 dark:border-slate-600 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-transparent outline-none transition-all dark:text-white resize-none shadow-inner")

          // Bot√≥n Guardar
          div(class="pt-2")
            button(type="submit" class="w-full bg-teal-600 hover:bg-teal-700 text-white font-bold py-3.5 rounded-xl shadow-lg shadow-teal-500/30 transition-all transform active:scale-95 flex items-center justify-center gap-2")
              span üíæ
              | Registrar Control

    // COLUMNA DERECHA: HISTORIAL COMPACTO
    div(class="lg:col-span-1")
      div(class="bg-slate-50 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700 rounded-[2rem] p-6 h-full")
        h3(class="text-sm font-bold text-slate-500 dark:text-slate-400 uppercase tracking-wider mb-6 flex items-center gap-2")
           span üìâ
           | √öltimos Controles

        if historial.length > 0
          div(class="space-y-4")
            each eva in historial
              div(class="bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 border-l-4 border-l-teal-500 rounded-xl p-4 shadow-sm hover:shadow-md transition-all")
                
                div(class="flex justify-between items-center mb-2")
                  span(class="text-[10px] font-bold text-slate-400 uppercase") #{new Date(eva.fecha || eva.createdAt).toLocaleDateString()}
                  span(class="text-[10px] font-bold text-slate-400 uppercase") #{new Date(eva.fecha || eva.createdAt).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}
                
                // Mini Grid de Valores
                div(class="grid grid-cols-3 gap-2 mb-3 bg-slate-50 dark:bg-slate-900/50 p-2 rounded-lg")
                  
                  // Usamos la l√≥gica de acceso a datos (JSON o plano)
                  - const pres = eva.signos_vitales ? eva.signos_vitales.presion : eva.presion_arterial
                  - const temp = eva.signos_vitales ? (eva.signos_vitales.temperatura || eva.signos_vitales.temp) : eva.temperatura
                  - const pulso = eva.signos_vitales ? eva.signos_vitales.frecuencia_cardiaca : eva.frecuencia_cardiaca

                  div(class="text-center")
                    span(class="block text-[9px] text-slate-400 uppercase") Pres.
                    span(class="font-mono font-bold text-slate-700 dark:text-white text-xs") #{pres || '-'}
                  div(class="text-center border-l border-slate-200 dark:border-slate-700")
                    span(class="block text-[9px] text-slate-400 uppercase") Pulso
                    span(class="font-mono font-bold text-slate-700 dark:text-white text-xs") #{pulso || '-'}
                  div(class="text-center border-l border-slate-200 dark:border-slate-700")
                    span(class="block text-[9px] text-slate-400 uppercase") Temp.
                    span(class="font-mono font-bold text-slate-700 dark:text-white text-xs") #{temp || '-'}¬∞
                
                if eva.observaciones || eva.nota
                   p(class="text-xs text-slate-600 dark:text-slate-300 italic line-clamp-2") "#{eva.observaciones || eva.nota}"

        else
          div(class="text-center py-10 opacity-50")
            div(class="text-4xl mb-2") ‚òÅÔ∏è
            p(class="text-sm") Sin registros previos.